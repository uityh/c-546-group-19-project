<article>
  <form action="/account/login" method="POST" class="user-log-in">
    <div id="login-form" class="myform">
      <h1>Log In</h1>
      <p>Please fill in this form to log into your account.</p>
      <hr />
      {{#if dbErr}}
        <p id="server-error">{{error}}</p>
      {{/if}}
      {{#if usernameErr}}
        <p>{{error}}</p>
      {{/if}}
      <p class="username-err"></p>
      <label for="username" class="username-label">Username</label>
      <input
        id="username"
        type="text"
        class="username-input"
        placeholder="Enter username (must have at least 2 characters)"
        value="{{username}}"
        name="username"
        required
        minlength="2"
      />

      {{#if pswErr}}
        <p>{{error}}</p>
      {{/if}}
      <p class="psw-err"></p>
      <label for="psw" class="psw-label">Password</label>
      <input
        id="psw"
        type="password"
        class="psw-input"
        placeholder="Enter Password (must have at least 8 characters)"
        value="{{password}}"
        name="psw"
        required
        minlength="8"
      />

      {{! <div> }}
      <button type="submit">Log In</button>
      {{! </div> }}
    </div>
  </form>
</article>
<script
  src="https://code.jquery.com/jquery-3.5.1.js"
  integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
  crossorigin="anonymous"
>
</script>
<script src="/public/scripts/login.js"></script>